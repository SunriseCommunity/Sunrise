root=true

[*.{csproj,props,targets,cs,yaml,yml}]
charset=utf-8
end_of_line=crlf
insert_final_newline=true
indent_style=space
trim_trailing_whitespace=true

[*.{csproj,props,targets}]
indent_size=2

[*.cs]
indent_size=4
csharp_style_namespace_declarations=file_scoped:warning
csharp_style_var_for_built_in_types=true:warning
csharp_style_var_when_type_is_apparent=true:warning
csharp_style_var_elsewhere=true:silent
csharp_style_throw_expression=false:warning
resharper_csharp_space_between_attribute_sections=false


[g_*.cs]
generated_code=true

# PascalCase public/protected
dotnet_naming_style.pascal.capitalization=pascal_case
dotnet_naming_symbols.public_members.applicable_accessibilities=public,internal,protected,protected_internal,private_protected
dotnet_naming_symbols.public_members.applicable_kinds=property,method,field,event
dotnet_naming_rule.public_pascal.severity=error
dotnet_naming_rule.public_pascal.symbols=public_members
dotnet_naming_rule.public_pascal.style=pascal

# camelCase private
dotnet_naming_style.camel.capitalization=camel_case
dotnet_naming_symbols.private_members.applicable_accessibilities=private
dotnet_naming_symbols.private_members.applicable_kinds=property,method,field,event
dotnet_naming_rule.private_camel.severity=warning
dotnet_naming_rule.private_camel.symbols=private_members
dotnet_naming_rule.private_camel.style=camel

# ALL_UPPER non-private const/static readonly
dotnet_naming_style.upper.capitalization=all_upper
dotnet_naming_style.upper.word_separator=_
dotnet_naming_symbols.pub_constants.applicable_accessibilities=public,internal,protected,protected_internal,private_protected
dotnet_naming_symbols.pub_constants.required_modifiers=const,static,readonly
dotnet_naming_symbols.pub_constants.applicable_kinds=field
dotnet_naming_rule.pub_upper.severity=warning
dotnet_naming_rule.pub_upper.symbols=pub_constants
dotnet_naming_rule.pub_upper.style=upper